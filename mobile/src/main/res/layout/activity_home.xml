<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/mainMessage"
        android:layout_gravity="center_horizontal"
        android:height="60dp"
        android:width="0dp"
        android:textAlignment="center"
        android:longClickable="true"
        android:enabled="true"
        android:text="@string/have_nothing"
        android:gravity="center_vertical"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="22sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:weightSum="1"
        android:layout_weight="0.04">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/date"
            android:id="@+id/todayis"
            android:layout_weight="0.47"
            android:textSize="42sp"
            android:gravity="center_horizontal"
            android:textColor="@color/bright_foreground_inverse_material_dark" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:layout_weight="0.53">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="New Text"
                android:id="@+id/date"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_weight="0.46"
                android:textSize="22sp"
                android:textColor="@color/background_material_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="New Text"
                android:id="@+id/weekandday"
                android:layout_weight="0.19"
                android:gravity="clip_vertical|center_horizontal"
                android:textStyle="italic"
                android:textColor="@color/bright_foreground_disabled_material_light" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
